# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/szukaj_ksiazek?schema=public"

# JWT
JWT_ACCESS_SECRET="your-access-secret-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-change-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Anthropic (Claude)
ANTHROPIC_API_KEY="your-anthropic-api-key"

# BUYBOX API
# Widget ID from BUY.BOX publisher panel - used in endpoint: https://buybox.click/{WIDGET_ID}/buybox.json
BUYBOX_WIDGET_ID="your-buybox-widget-id"
# Request timeout in milliseconds
BUYBOX_TIMEOUT=5000
# Cache TTL in seconds (how long to cache offers before re-fetching)
BUYBOX_CACHE_TTL=3600

# Application
PORT=3000
NODE_ENV="development"
CORS_ORIGINS="http://localhost:8081,http://localhost:19006"
